<div class="container">
  <div class="span12">
    <div class="row">
      <%= link_to "<< Back to all restaurants", restaurants_path, class: "top-link" %>
      <h1><%= @restaurant.name %></h1>
      <table class="table" id="restaurant-show">
        <tr>
          <td><strong>Description</strong></td>
          <td><%= @restaurant.description %></td>
        </tr>
        <tr>
          <td><strong>Address</strong></td>
          <td>
            <%= @restaurant.street_address %><br>
            <%= city_state_zip(@restaurant) %>
          </td>
        </tr>
        <tr>
          <td><strong>Phone</strong></td>
          <td><%= @restaurant.phone %></td>
        </tr>
        <tr>
          <td><strong>Owner</strong></td>
          <td><%= @restaurant.owner.name %></td>
        </tr>
      </table>

      <% if current_owner && @restaurant.owner == current_owner %>
        <div class="btn-group">
          <%= button_to "Edit", edit_restaurant_path(@restaurant), method: :get, class: "btn btn-primary" %>
          <%= button_to "Delete", restaurant_path(@restaurant), method: :delete, confirm: "Are you sure you want to delete this restaurant?", class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

